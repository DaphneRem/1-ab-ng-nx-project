{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@ab/*": [
        "libs/*"
      ],
      "@ab/error-pages": [
        "libs/error-pages/src/index.ts"
      ],
      "@ab/custom-datatables": [
        "libs/custom-datatables/src/index.ts"
      ],
      "@ab/ingests": [
        "libs/ingests/src/index.ts"
      ],
      "@ab/loaders": [
        "libs/loaders/src/index.ts"
      ],
      "@ab/notifications": [
        "libs/notifications/src/index.ts"
      ],
      "@ab/playlists": [
        "libs/playlists/src/index.ts"
      ],
      "@ab/pub": [
        "libs/pub/src/index.ts"
      ],
      "@ab/root": [
        "libs/root/src/index.ts"
      ],
      "@at/router-state": [
        "libs/router-state/src/index.ts"
      ],
      "@ab/scroll-to-top": [
        "libs/scroll-to-top/src/index.ts"
      ],
      "@ab/sub-header": [
        "libs/sub-header/src/index.ts"
      ],
      "@ab/trace-segment": [
        "libs/trace-segment/src/index.ts"
      ],
      "@ab/widgets": [
        "libs/widgets/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
